# Snyk Policy File
# https://docs.snyk.io/snyk-cli/test-for-vulnerabilities/the-.snyk-file

version: v1.25.0

# Ignore specific vulnerabilities (use sparingly and document why)
ignore: {}

# Patches for vulnerabilities (rarely needed with modern package managers)
patch: {}

# Language settings
language-settings:
  python:
    # Don't fail on dev dependencies
    dev: false
  javascript:
    # Scan both dependencies and devDependencies
    dev: true

# Severity threshold (medium catches medium, high, and critical)
# This is also set in the CLI call, but good to have here as default
severity-threshold: medium

# Trust policies from upstream packages
trust-policies: true

# Exclude paths from scanning
exclude:
  global:
    - "**/node_modules/**"
    - "**/venv/**"
    - "**/.venv/**"
    - "**/dist/**"
    - "**/build/**"
    - "**/target/**"
    - "**/__pycache__/**"
    - "**/test/**"
    - "**/tests/**"
    - "**/*.test.*"
    - "**/*.spec.*"
